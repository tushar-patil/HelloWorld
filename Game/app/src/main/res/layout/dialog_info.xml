<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dim_415"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/faint_brown"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_20"
            android:gravity="center_horizontal"
            android:text="Congratulations"
            android:textColor="@color/extreme_dark_brown"
            android:textSize="@dimen/txt_24"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_20"
            android:gravity="center_horizontal"
            android:text="You have won the Game"
            android:textColor="@color/dark_brown"
            android:textSize="@dimen/txt_24"
            android:textStyle="normal"/>

        <View
            android:id="@+id/horiz_line"
            android:layout_marginTop="@dimen/dim_35"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_0.1"
            android:background="@color/dark_brown"
            />

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_20"
            android:gravity="center_horizontal"
            android:text="Ok"
            android:textColor="@color/dark_brown"
            android:textSize="@dimen/txt_24"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>